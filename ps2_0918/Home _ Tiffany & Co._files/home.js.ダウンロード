$(document).ready(function(){layoutTiles();initCookieDisclaimer();$("#cookieDisclaimer .close").click(function(e){$("#cookieDisclaimer").hide();e.preventDefault();});$("#maincontent > .tile-container").show();});$(window).resize(function(){layoutTiles();});function centerItemInfo(){if($(".iteminfo").length){var containerheight=$(".item-container").height();var divheight=$(".iteminfo").height();var topmargin=(containerheight/2)-(divheight/2);$(".iteminfo").css("padding-top",topmargin);}}function initCookieDisclaimer(){if($("#cookieDisclaimer").length){if(!CookieManager.getCookieValue("ckp")||CookieManager.getCookieValue("ckp")!="true"){$("#cookieDisclaimer").show();}CookieManager.setCookieValue("ckp","true");}}