var templateSlide="<div class='productSlides'><img src='https://media.tiffany.com/is/image/Tiffany/EcomMobileItemM2/$imagURL$.jpg?defaultImage=NoImageAvailable&&'><p>$imgTitle$ $price$</p><br><p><a class='productLink avenir type-cta black' href='$url$'>$shop$</a></p><br></div> ";var fromString,shopString;$.ajax({url:"/Mobile/Default.aspx/GetResourceString",type:"POST",data:'{"key": "txtFrom", "value": "From"}',dataType:"json",contentType:"application/json; charset=utf-8",success:function(data){fromString=data.d;},error:function(jqXHR,status,error){console.log(error);}});jQuery.fn.cleanWhitespace=function(){textNodes=this.contents().filter(function(){return(this.nodeType==3&&!/\S/.test(this.nodeValue));}).remove();return this;};function getSkuData(){var tiles=[];$(".shop-tile").each(function(){if($.inArray($(this).closest(".shopping-tile").attr("id"),tiles)==-1){getProductInfo($(this).closest(".shopping-tile").attr("id"));}});}function getProductInfo(tile){var itemData='[';var skuList=[];$("#"+tile+" .shop-tile .shop-section a").each(function(){$(this).addClass("null");skuList[skuList.length]='{"SKU": "'+$(this).attr("data-sku")+'", "TYPE": "N"}';});itemData+=skuList.join(",");itemData+=']';return $.ajax({url:"/Mobile/Default.aspx/GetDigCatalogueData",type:"POST",data:'{"digCatalogueItems":'+itemData+'}',dataType:"json",contentType:"application/json; charset=utf-8",success:function(data){if(data.d!=null){var newIMG;var itemArray=new Array();var count=0;for(var i=0;i<data.d.length;i++){if(data.d[i]!=null){itemArray[count]=data.d[i];count++;}if(count==5){break;}}for(var i=0;i<itemArray.length;i++){if(itemArray[i]!=null&&itemArray[i].isAvailable.toLowerCase()!="false"){$("#"+tile+" .touch-carousel").removeClass("touch-carousel").addClass("apply-touch-carousel");$("#"+tile+" .shop-tile .shop-section a[data-sku="+itemArray[i].Sku+"]").removeClass("null");var templateProduct=templateSlide.replace('$imagURL$',itemArray[i].ImgURL).replace('$imgTitle$',itemArray[i].Name);if(itemArray[i].SKUList==null){if(itemArray[i].Price!=null){templateProduct=templateProduct.replace('$price$',itemArray[i].Price);}else{templateProduct=templateProduct.replace('$price$',"");}}else{var priceDifferent=false;for(var j=0;j<itemArray[i].SKUList.length;j++){if(itemArray[i].SKUList[j].Price!=itemArray[i].SKUList[0].Price){priceDifferent=true;break;}}if(itemArray[i].SKUList.length==1){templateProduct=templateProduct.replace('$price$',itemArray[i].SKUList[0].Price);}else if(priceDifferent==true){templateProduct=templateProduct.replace('$price$',"From "+itemArray[i].Price);}else{templateProduct=templateProduct.replace('$price$',itemArray[i].Price);}}templateProduct=templateProduct.replace('$shop$',shopNowText);var trackingCodes="";if($("body").attr("id")=="thisIsTiffany"){trackingCodes="?trackpdp=tty&"+$("a[data-sku='"+itemArray[i].Sku+"']").attr("data-promo");}templateProduct=templateProduct.replace('$url$',itemArray[i].FriendlyUrl+trackingCodes);if(typeof newIMG!="undefined"){newIMG=newIMG+" "+templateProduct;}else{newIMG=templateProduct;}}}$(newIMG).appendTo("#"+tile+" .apply-touch-carousel .container");}initTouchCarousel();},error:function(jqXHR,status,error){console.log(error);}});}if($("body").attr("id")!="itemPage"){getSkuData();}$(document).ready(function(){$(".shopping-tile").show();});